%h1 Victims

- if notice.present?
  .alert-box.success{ "data-alert" => "" }
    = notice
    %a.close{ href: "#" } &times;
- if alert.present?
  .alert-box.alert{ "data-alert" => "" }
    = alert
    %a.close{ href: "#" } &times;
= yield

= simple_form_for @student do |f|
  = f.input :name, label: "Name"
  = f.submit "Add Student"
